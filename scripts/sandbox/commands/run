# If there is a venv directory
if [ -d "$HAB_DIR/venv" ]; then
	# use that environment
	source $HAB_DIR/venv/bin/activate 
else 
	# Use virtualenv to create it.
    virtualenv $HAB_DIR/venv
    # activate the virtualenv
	source $HAB_DIR/venv/bin/activate
	# install flask to it.
    pip install flask
fi



# run the server
python "${APP}/main.py"
